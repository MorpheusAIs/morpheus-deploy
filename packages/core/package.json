{
  "name": "@morpheus-deploy/core",
  "version": "0.1.0",
  "description": "Core logic for SDL synthesis, containerization, and economic engine",
  "license": "MIT",
  "author": "Morpheus Contributors",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@akashnetwork/akashjs": "^0.10.0",
    "@morpheus-deploy/contracts": "workspace:*",
    "@skip-go/client": "^0.5.0",
    "yaml": "^2.3.0",
    "dockerode": "^4.0.0",
    "tar": "^7.0.0",
    "viem": "^2.0.0",
    "eciesjs": "^0.4.0"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/tar": "^6.1.10",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
