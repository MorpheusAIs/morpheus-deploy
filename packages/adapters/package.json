{
  "name": "@morpheus-deploy/adapters",
  "version": "0.1.0",
  "description": "Persistence and durability adapters for Morpheus deployments",
  "license": "MIT",
  "author": "Morpheus Contributors",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "pg": "^8.11.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/pg": "^8.10.9",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
